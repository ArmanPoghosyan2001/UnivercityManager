@model IEnumerable<StudentModel>
<link href="~/css/tables.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div id="search-result">
    <table class="styled-table message-container">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Faculty</th>
                <th>Mark</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                if (student.Mark < 8)
                {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Faculty</td>
                <td>@student.Mark</td>
                <td><img src="~/imgs/failed.jpg" width="40" height="40" /></td>
            </tr>
                }
                else
                {
                    <tr>
                        <td>@student.FirstName</td>
                        <td>@student.LastName</td>
                        <td>@student.Faculty</td>
                        <td>@student.Mark</td>
                        <td><img src="~/imgs/passed.jpg" width="40" height="40" /></td>
                    </tr>

                }
            }
        </tbody>
    </table>
</div>


<div style="margin-top:25px;" class="ef">
    <input type="text" id="search" name="prefix" class="searchText" style="height:40px;width:376px;margin-top:31px; margin-left:10px;" placeholder="search...">
</div>


